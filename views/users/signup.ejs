<% layout("/layout/boilerplate") %>


<div class="row mt-3">
    <h1 class="col-6 offset-2">SignUp on Wanderlust</h1>
    <div class="col-6 offset-2">
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username"  class="form-label">Username</label>
                <input  class="form-control"  name="username"  type="text" required id="username">
                <div class="valid-feedback">Username Looks Good</div>
                <div class="invalid-feedback">enter Valid username</div>
            </div>

            <div class="mb-3">
                <label for="email"  class="form-label">Email</label>
                <input  class="form-control"  name="email"  type="email" required id="email">
                
            </div>
            
            <div class="mb-3">
                <label for="password"  class="form-label">password</label>
                <input  class="form-control"  name="password"  type="password" required id="password">
                <div class="valid-feedback">password Looks Good</div>
                <div class="invalid-feedback">Please Enter Strong Password</div>
            </div>

            <button class="btn btn-dark">Signup</button>




        </form>
    </div>
</div>